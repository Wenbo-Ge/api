RewriteEngine On
RewriteRule ^api/([a-zA-Z_-]*)$ api.php?name=$1 [NC,L]
RewriteRule ^add/([a-zA-Z_-]*)$ add.php?name=$1/quantity=$1 [NC,L]
RewriteRule ^product/([a-zA-Z_-]*)$ product.php?id=$1 [NC,L]
RewriteRule ^update/([a-zA-Z_-]*)$ update.php?id=$1/new_quantity=$1 [NC,L]
RewriteRule ^delete/([a-zA-Z_-]*)$ delete.php?id=$1 [NC,L]